{
  "name": "@bratel/dgit",
  "version": "0.0.14",
  "description": "@dking/hasaki-cli init application",
  "publishConfig": {
    "access": "public"
  },
  "author": "JohnApache",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsq/dgit"
  },
  "keywords": [
    "dgit",
    "github download tool"
  ],
  "main": "./lib/dgit.js",
  "types": "./lib/dgit.d.ts",
  "bin": {
    "dgit": "./bin/cmd.js"
  },
  "scripts": {
    "build:ts": "tsc --build",
    "lint": "eslint",
    "lint:fix": "eslint src --ext .jsx --ext .js --ext .tsx --ext .ts --cache --fix",
    "test:mocha": "nyc --reporter=text mocha --require ts-node/register test/**/*.{ts,tsx} -t 60000",
    "test:mocha:reporter": "nyc --reporter=lcov --reporter=text mocha --require ts-node/register test/**/*.{ts,tsx} -t 60000 --reporter=mochawesome",
    "watch:ts": "tsc --watch",
    "prepublishOnly": "npm run test:mocha && npm run lint && npm run build:ts"
  },
  "dependencies": {
    "@types/async": "^3.2.25",
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.9",
    "@types/ora": "^3.2.0",
    "@types/progress": "^2.0.7",
    "@types/request": "^2.48.13",
    "async": "^3.2.6",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "progress": "^2.0.3",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/parser": "^8.50.1",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{jsx,js}": [
      "npm run lint",
      "git add"
    ]
  }
}
